{
  "name": "misterdonut",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "predev": "yarn gen",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,graphql,json,yaml,yml}\" && sort-package-json 'package.json' 'packages/*/package.json' 'apps/web/package.json'",
    "gen": "yarn workspace @misterdonut/graphql-codegen gen",
    "graph": "turbo run build --graph=assets/dependencies-graph.png",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "storybook": "yarn workspace @misterdonut/storybook storybook",
    "test-storybook": "yarn workspace @misterdonut/storybook test-storybook"
  },
  "resolutions": {
    "@types/react": "18.0.15",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/types": "^17.0.0",
    "commitlint-config-gitmoji": "^2.2.5",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "sort-package-json": "^1.57.0",
    "turbo": "latest"
  },
  "packageManager": "npm@8.1.0",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
