{
  "private": true,
  "name": "misterdonut",
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "predev": "yarn gen",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen": "yarn workspace @misterdonut/graphql-codegen gen",
    "graph": "turbo run build --graph=assets/dependencies-graph.png",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "storybook": "yarn workspace @misterdonut/storybook storybook",
    "test-storybook": "yarn workspace @misterdonut/storybook test-storybook"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "resolutions": {
    "@types/react": "18.0.15",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/types": "^17.0.0",
    "commitlint-config-gitmoji": "^2.2.5",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-package-json": "^2.6.4",
    "tsc-files": "^1.1.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "npm@8.1.0"
}
